pipeline {
    agent any 

    stages { 
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'https://github.com/Naveendi4087/DevOpsProject'
                }
            }
        }
        stage('Build backend Docker Image') {
            steps {  
                dir('backend') {
                    bat 'docker build -t thashara/backendv1:%BUILD_NUMBER% .'
                }
            }
        }
        stage('Build frontend Docker Image') {
            steps {
                dir('frontend') {
                    sh 'docker build -t thashara/frontendv1:%BUILD_NUMBER% .'
                }
            }
        }
        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'devops-password', variable: 'devopspassword')]) {
                    script {
                        sh "docker login -u thashara -p %devopspassword%"
                    }
                }
            }
        }
        stage('Push backend Image') {
            steps {
                sh 'docker push thashara/backendv1:%BUILD_NUMBER%'
            }
        }
        stage('Push frontend Image') {
            steps {
                sh 'docker push thashara/frontendv1:%BUILD_NUMBER%'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
